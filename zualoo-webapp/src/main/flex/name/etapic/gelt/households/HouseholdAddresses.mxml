<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" 
		styleName="listPanel"
		layout="absolute" title="Household Addresses">
	<mx:VBox paddingBottom="15" paddingTop="15" paddingLeft="15" paddingRight="15" x="0" y="0" width="100%" height="100%">		
		<mx:DataGrid width="100%" showHeaders="false">
			<mx:columns>
				<mx:DataGridColumn dataField="" width="20"/>
				<mx:DataGridColumn dataField="memberId"/>
			</mx:columns>
		</mx:DataGrid>
		<mx:HBox width="100%" horizontalAlign="right">
			<mx:TextInput width="200" id="newMemberId"/>
			<mx:Button id="addMemberButton" label="Add"/>
		</mx:HBox>
		<mx:HRule width="100%"/>
		<mx:HBox width="100%">
			<mx:Image source="@Embed('/icons/star.png')"/>
			<mx:TextArea width="100%" text="Add addresses for your home and work." borderThickness="0"/>
		</mx:HBox>
	</mx:VBox>
</mx:Panel>
